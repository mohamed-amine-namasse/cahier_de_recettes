{
  "swagger": "2.0",
  "info": {
    "description": "Il s'agit de la documentation de l'API cahier de recettes",
    "version": "1.0.7",
    "title": "Cahier des recettes",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "apiteam@swagger.io"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "cahierdesrecettes.alwaysdata.net",
  "tags": [
    {
      "name": "recipe",
      "description": "Operations about recipe",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    },
    {
      "name": "picture",
      "description": "Operations about picture"
    },
    {
      "name": "user",
      "description": "Operations about user",
      "externalDocs": {
        "description": "Find out more about our store",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": ["https", "http"],
  "paths": {
    "/api/recipe": {
      "get": {
        "tags": ["recipe"],
        "summary": "Get the list of all recipes",
        "description": "Multiple status values can be provided with comma separated strings",
        "produces": ["application/json", "application/xml"],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Recipe"
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "401": {
            "description": "Error"
          }
        },
        "security": [
          {
            "recipe_auth": ["write:recipes", "read:recipes"]
          }
        ]
      },
      "post": {
        "tags": ["recipe"],
        "summary": "Add a new recipe",
        "operationId": "addRecipe",
        "consumes": ["application/json", "application/xml"],
        "produces": ["application/json", "application/xml"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Recipe object that needs to be added to the recipes book",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Recipe added successfully"
          },
          "400": {
            "description": "Recipe can't be added"
          },
          "401": {
            "description": "Error"
          }
        },
        "security": [
          {
            "recipe_auth": ["write:recipes", "read:recipes"]
          }
        ]
      }
    },
    "/api/recipe/{recipeId}": {
      "get": {
        "tags": ["recipe"],
        "summary": "Find a recipe by ID",
        "operationId": "getRecipeById",
        "produces": ["application/json", "application/xml"],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe that needs to be fetched",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          },
          "401": {
            "description": "Error"
          },
          "404": {
            "description": "Recipe not found"
          }
        },
        "security": [
          {
            "recipe_auth": ["write:recipes", "read:recipes"]
          }
        ]
      },
      "put": {
        "tags": ["recipe"],
        "summary": "Update a recipe by ID",
        "operationId": "updateRecipe",
        "consumes": ["application/json", "application/xml"],
        "produces": ["application/json", "application/xml"],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Recipe object that needs to be updated",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Recipe updated"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "401": {
            "description": "Recipe not found"
          }
        },
        "security": [
          {
            "recipe_auth": ["write:recipes", "read:recipes"]
          }
        ]
      },
      "delete": {
        "tags": ["recipe"],
        "summary": "Delete a recipe by ID",
        "operationId": "deleteRecipe",
        "produces": ["application/json", "application/xml"],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "description": "Recipe id to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Recipe deleted"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "401": {
            "description": "Error"
          },
          "404": {
            "description": "Recipe not found"
          }
        },
        "security": [
          {
            "recipe_auth": ["write:recipes", "read:recipes"]
          }
        ]
      }
    },
    "/api/picture": {
      "post": {
        "tags": ["picture"],
        "summary": "Add a new picture",
        "operationId": "addPicture",
        "consumes": ["application/json", "application/xml"],
        "produces": ["application/json", "application/xml"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Picture object that needs to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Picture"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Picture created"
          },
          "405": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Error"
          }
        }
      }
    },
    "/api/auth/signup": {
      "post": {
        "tags": ["user"],
        "summary": "Create user",
        "description": "This can only be done by the logged in user.",
        "operationId": "createUser",
        "consumes": ["application/json"],
        "produces": ["application/json", "application/xml"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created"
          },
          "400": {
            "description": "User can't be created"
          },
          "500": {
            "description": "Error"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["user"],
        "summary": "Logs user into the system",
        "operationId": "loginUser",
        "produces": ["application/json", "application/xml"],
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "description": "The user name for login",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "The password for login in clear text",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "headers": {
              "X-Expires-After": {
                "type": "string",
                "format": "date-time",
                "description": "date in UTC when token expires"
              },
              "X-Rate-Limit": {
                "type": "integer",
                "format": "int32",
                "description": "calls per hour allowed by the user"
              }
            },
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          },
          "500": {
            "description": "Error"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "recipe_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://cahierdesrecettes.alwaysdata.net/oauth/authorize",
      "flow": "implicit",
      "scopes": {
        "read:recipes": "read your recipes",
        "write:recipes": "modify recipes in your account"
      }
    }
  },
  "definitions": {
    "Picture": {
      "type": "object",
      "properties": {
        "imageUrl": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Picture"
      }
    },
    "Recipe": {
      "type": "object",
      "required": [
        "id",
        "title",
        "ingredients",
        "instructions",
        "author",
        "date",
        "userId",
        "imageUrl"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "title": {
          "type": "string"
        },
        "ingredients": {
          "type": "string"
        },
        "instructions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "author": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "imageUrl": {
          "type": "array",
          "xml": {
            "wrapped": true
          },
          "items": {
            "type": "string",
            "xml": {
              "name": "photoUrl"
            }
          }
        }
      },
      "xml": {
        "name": "Recipe"
      }
    },
    "User": {
      "type": "object",
      "required": ["name", "email", "password"],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "xml": {
        "name": "User"
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}
